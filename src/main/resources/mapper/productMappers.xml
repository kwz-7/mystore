     <select id="getProduct" parameterType="long" resultMap="product">
         SELECT ID,PRODUCT_NAME AS PRODUCTNAME,STOCK,PRICE,VERSION,NOTE
         FROM T_PRODUCT WHERE ID=#{ID}

     </select>
    <!--减少库存-->
    <select id="decreaseProduct" >
        UPDATE T_PRODUCT SET STOCK=STOCK-#{QUANTITY} WHERE ID =#{ID}
    </select>
